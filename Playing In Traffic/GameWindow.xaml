<Window x:Class="Playing_In_Traffic.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Playing_In_Traffic"
        mc:Ignorable="d"
        Title="GameWindow">
    <Grid x:Name="Main_Panel" Background="Black">
        <!--Grid Formatting -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="3*" MinWidth="400"/>
            <ColumnDefinition Width="3"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid x:Name="Bottom_Panel" Grid.ColumnSpan="5" Grid.Row="3" Background="#FF950E0E"/>
        <GridSplitter x:Name="gridSplitterLeft" Grid.Column="1" Grid.RowSpan="1"  Grid.Row="1" HorizontalAlignment="Stretch" />
        <GridSplitter x:Name="gridSplitterRight" Grid.Column="3" Grid.RowSpan="1"  Grid.Row="1" HorizontalAlignment="Stretch" />
        <Grid x:Name="Left_Panel" Grid.Row="1" Grid.RowSpan="1" Background="#FF3AA25B" />
        <Grid x:Name="Rigth_Panel" Grid.Row="1" Grid.RowSpan="1" Background="#FF3AA25B" Grid.Column="4" >
            <TabControl x:Name="RightTabControl">
                <TabItem Header="Building Items">
                    <Grid Background="#FFE5E5E5">
                        <Image x:Name="Small_House" Height="30" Width="30" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                        <Image x:Name="Office_tower" Height="30" Width="30" Margin="30,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Road Items">
                    <Grid Background="#FFE5E5E5">

                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <Grid x:Name="Top_Panel" Grid.ColumnSpan="5" Background="#FFD4D2D2" Height="19"/>
    </Grid>



</Window>
